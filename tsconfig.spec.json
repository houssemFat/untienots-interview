/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "paths": {
      "@app-shared/*": [
        "./src/app/shared/*"
      ],
      "@app-icons/*": [
        "./src/app/icons/*"
      ],
      "@app-core/*": [
        "./src/app/core/*"
      ],
      "@app-features/*": [
        "./src/app/features/*"
      ]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
